// This method is used to sort the unsorted array using Bubble sort technique !
static void bubble(int arr[]){
        for(int i=0;i< arr.length;i++){
            for (int j=1;j< arr.length-i;j++){
                if(arr[j]<arr[j-1]){
                    int temp=arr[j];
                    arr[j]=arr[j-1];
                    arr[j-1]=temp;

                }
            }
        }
  }
